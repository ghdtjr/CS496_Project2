<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/login_background"
    tools:context=".NewFeedPost">

    <ImageView
        android:layout_marginTop="150dp"
        android:layout_width="380dp"
        android:layout_height="500dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/circle_button_white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="220dp"
            android:fontFamily="@font/gillsans"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:textSize="30dp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:text="Add Post on Feed" />

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="90dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginTop="0dp"
                android:text="Posting Category: "
                android:textColor="#000000"
                android:textSize="15dp"
                android:textStyle="bold" />
            <TextView
                android:layout_marginLeft="15dp"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:textSize="15dp"
                android:textColor="#000000"
                android:text="Your Selection"
                android:id="@+id/spinner_result3"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
            <Spinner
                android:id="@+id/spinner3"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:entries="@array/test2">
            </Spinner>
        </LinearLayout>

        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="15dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="Place Name" />

        <EditText
            android:id="@+id/addPlace"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="Where did you go?"
            android:inputType="number" />

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/postImage"
                android:src="@drawable/ic_baseline_add_a_photo_24"
                android:layout_width="140dp"
                android:layout_height="140dp"

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:text="Contents"
                    android:fontFamily="@font/gillsansb" />

                <EditText
                    android:id="@+id/postContent"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_height="100dp"
                    android:ems="10"
                    android:inputType="text" />

            </LinearLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/createFeedPost"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/circle_button2"
            android:text="Add"
            android:textColor="#FFF"
            android:backgroundTint="#FF8C85"
            android:textStyle="bold"
            android:textSize="20dp"
            android:gravity="center"/>

    </LinearLayout>



</RelativeLayout>