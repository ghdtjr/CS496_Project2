<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/login_background"
    tools:context=".NewPost">

    <ImageView
        android:layout_marginTop="150dp"
        android:layout_width="380dp"
        android:layout_height="500dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/circle_button_white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:textSize="30dp"
            android:fontFamily="@font/gillsans"
            android:textColor="#fff"
            android:textStyle="bold"
            android:text="Ask for travel" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:textSize="15dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="Trip destination" />


        <EditText
            android:id="@+id/addPlace"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="Enter tour destination" />


        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textSize="15dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="Travel Date/Schedule" />

        <EditText
            android:id="@+id/addDate"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="Write down your schedule" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:textSize="15dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="Posting Category: " />
        <TextView
            android:layout_marginLeft="15dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:textSize="15dp"
            android:textColor="#000000"
            android:text="Your Selection"
            android:id="@+id/spinner_result"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
            <Spinner
                android:id="@+id/spinner"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:entries="@array/test">
            </Spinner>
        </LinearLayout>

        <TextView
            android:id="@+id/createPost"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/circle_button2"
            android:text="Add"
            android:textColor="#FFF"
            android:backgroundTint="#FF8C85"
            android:textStyle="bold"
            android:textSize="20dp"
            android:gravity="center"/>

    </LinearLayout>



</RelativeLayout>